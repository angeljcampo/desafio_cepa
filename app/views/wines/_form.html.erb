<%= form_with(model: wine, local: true) do |form| %>
  <% if wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :img %>
    <%= form.url_field :img %>
  </div>

  <div class="field">
    <%= form.label :origin %>
    <%= form.text_field :origin %>
  </div>

  <% if wine.id.present? && current_user.admin? %>
    <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score %>
  </div>
  <% end %>
  
  
  <div class="link">
    <%= link_to_add_association "add strain", form, :winestrains %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
