<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Origin</th>
      <th>Strains</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= image_tag(wine.img, :height => 40)%></td> 
        <td><%= wine.origin %></td>
        <td><%= wine.score %></td>
        <td><%= wine.show_together %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
<br>
  <div>
  <%= link_to 'New Wine', new_wine_path %>
  </div>
  <div>
  <%= link_to 'New Strain', new_strain_path %>
  </div>
  <div>
  <%= link_to 'New Oenologist', new_oenologist_path %>
  </div>
<% end %>
